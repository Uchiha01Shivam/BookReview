@model List<BookReviewWeb.Models.Discussion>

<h1>Discussions</h1>

@if (Model.Count == 0)
{
    <p>No discussions available.</p>
}
else
{
    <ul>
        @foreach (var discussion in Model)
        {
            <li>
                <h3>@discussion.question</h3>
                <p>Posted by: @discussion.User</p>
              
               
             
                <a asp-action="SeeMore" asp-controller="Community" asp-route-id="@discussion.Id">See Forum</a>
                
                @if (discussion.User == User.Identity.Name)
                {
                    <a asp-action="EditQues" asp-controller="Community" asp-route-id="@discussion.Id">Edit</a>
                }
            </li>
        }
    </ul>

  


}

<h2>Create a New Discussion</h2>
<form asp-action="Create" asp-controller="Community" method="post">
    <div class="form-group">
        <label for="question">Question</label>
        <input type="text" class="form-control" id="question" name="question" required>
    </div>
    <div class="form-group">
        <label for="User">User</label>
        <input type="text" class="form-control" id="User" name="User" value="@User.Identity.Name" readonly="readonly" required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
